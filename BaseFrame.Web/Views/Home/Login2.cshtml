
@{
    Layout = null;
    string message = ViewData["message"] as string;
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="/lib/html5.js"></script>
    <script type="text/javascript" src="/lib/respond.min.js"></script>
    <![endif]-->
    <link href="/static/h-ui/css/H-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="/static/h-ui.admin/css/H-ui.login.css" rel="stylesheet" type="text/css" />
    <link href="/static/h-ui.admin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/lib/Hui-iconfont/1.0.8/iconfont.css" rel="stylesheet" type="text/css" />
    <!--[if IE 6]>
    <script type="text/javascript" src="http://lib.h-ui.net/DD_belatedPNG_0.0.8a-min.js" ></script>
    <script>DD_belatedPNG.fix('*');</script>
    <![endif]-->
    <title>登录 - H-ui.admin.page v3.0</title>
    <meta name="keywords" content="H-ui">
    <meta name="description" content="H-ui.admin.page v3.0">
</head>
<body>
    <div class="header"></div>
    <div class="loginWraper">
        <div id="loginform" class="loginBox">
            <form class="form form-horizontal" action="/Home/Login2" method="post" id="form-login">
                @Html.AntiForgeryToken()
                @Html.Hidden("returnUrl", ViewData["returnUrl"])
                <div class="row cl">
                    <label class="form-label col-xs-3"><i class="Hui-iconfont">&#xe60d;</i></label>
                    <div class="formControls col-xs-8">
                        @Html.TextBox("userName", ViewData["userName"], new { @class = "input-text size-L", @placeholder = BaseFrame.Core.Helpers.LanguageHelper.L("UserName") })
                    </div>
                </div>
                <div class="row cl">
                    <label class="form-label col-xs-3"><i class="Hui-iconfont">&#xe60e;</i></label>
                    <div class="formControls col-xs-8">
                        @Html.Password("password", ViewData["password"], new { @class = "input-text size-L", @placeholder = BaseFrame.Core.Helpers.LanguageHelper.L("Password") })
                    </div>
                </div>
                <div class="row cl">
                    <div class="formControls col-xs-8 col-xs-offset-3">
                        <input name="login" type="button" class="btn btn-success radius size-L" value="&nbsp;登&nbsp;&nbsp;&nbsp;&nbsp;录&nbsp;">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">Copyright 你的公司名称 by H-ui.admin.page.v3.0</div>

    <script type="text/javascript" src="/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="/static/h-ui/js/H-ui.js"></script>
    <script type="text/javascript" src="/lib/layer/2.4/layer.js"></script>
    <script src="~/lib/jsencrypt/jsencrypt.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var publicKey = "@ViewData["PublicKey"]";
            var encrypt = new JSEncrypt();
            encrypt.setPublicKey(publicKey);
            $("input[name='login']").click(function () {
                var info = {
                    UserName: $("#userName").val(),
                    Password: $("#password").val(),
                    Time: new Date()
                }
                var text = JSON.stringify(info);
                var cipher = encrypt.encrypt(text);

                $.ajax({
                    url: '/Home/Login2',
                    type: 'POST',
                    data: { cipher: cipher, returnUrl: $("#returnUrl").val(), __RequestVerificationToken: $("input[name='__RequestVerificationToken']").val() },
                }).done(function (result) {
                    if (result.Status) {
                        location.href = $("#returnUrl").val();
                    } else {
                        layer.msg(result.Message, { icon: 2, time: 1000 });
                    }
                });
            });
        });
    </script>
</body>
</html>